<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Indoor">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/third"
                android:layout_width="370dp"
                android:layout_height="270dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton

                    android:id="@+id/tableOneIndoor"
                    android:layout_width="260dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/eight_seat">

                </ImageButton>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/table"
                android:layout_width="360dp"
                android:layout_height="220dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/tableTwoIndoor"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/six_seat">

                </ImageButton>

                <ImageButton
                    android:id="@+id/tableThreeIndoor"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/four_seat">

                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourth"
                android:layout_width="360dp"
                android:layout_height="220dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/tableFourIndoor"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/four_seat">

                </ImageButton>

                <ImageButton
                    android:id="@+id/tableFiveIndoor"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/six_seat">

                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/last"
                android:layout_width="370dp"
                android:layout_height="270dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton

                    android:id="@+id/tableSixIndoor"
                    android:layout_width="260dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/eight_seat">

                </ImageButton>



            </LinearLayout>
            <Button
                android:id="@+id/continueIndoorButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Continue">

            </Button>
        </LinearLayout>
    </HorizontalScrollView>

</ScrollView>