<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Outdoor">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/third"
                android:layout_width="470dp"
                android:layout_height="270dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/tableOneOutdoor"
                    android:layout_width="160dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/two_o">

                </ImageButton>

                <ImageButton
                    android:id="@+id/tableTwoOutdoor"
                    android:layout_width="270dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/four">

                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourth"
                android:layout_width="470dp"
                android:layout_height="270dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/tableThreeOutdoor"
                    android:layout_width="160dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/two_o">

                </ImageButton>

                <ImageButton
                    android:id="@+id/tableFourOutdoor"
                    android:layout_width="270dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/four">

                </ImageButton>

            </LinearLayout>

            <ImageButton
                android:id="@+id/tableFiveOutdoor"
                android:layout_width="260dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/twooo">

            </ImageButton>

            <Button
                android:id="@+id/continueButton"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Continue">
            </Button>

        </LinearLayout>
    </HorizontalScrollView>

</ScrollView>